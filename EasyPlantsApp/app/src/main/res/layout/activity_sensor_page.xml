<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sensorPageActivity">

    <TextView
        android:id="@+id/text_sensorPageName"
        android:layout_width="145dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="24dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text_sensorPageID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_sensorPageName"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="14dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/button_toThresh"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="189dp"
        android:text="Set Threshold" />

    <Button
        android:id="@+id/button_toGraph"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_toThresh"
        android:layout_alignParentTop="true"
        android:layout_marginTop="257dp"
        android:text="See Humidity Graph" />

    <Button
        android:id="@+id/button_toOptions"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_toThresh"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="137dp"
        android:text="Options" />
</android.widget.RelativeLayout>