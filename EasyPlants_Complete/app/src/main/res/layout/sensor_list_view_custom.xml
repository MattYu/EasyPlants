<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/view_plantImage"
        android:layout_width="86dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="4dp"
        tools:srcCompat="@drawable/plant_test" />

    <TextView
        android:id="@+id/text_plantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="23dp"
        android:text="Plant Name"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/text_sensorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_plantName"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:text="Sensor ID"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/text_sensorID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_sensorInfo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:text="Sensor ID"
        android:textSize="14dp"/>
</RelativeLayout>